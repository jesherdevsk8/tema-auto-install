sudo apt install wget git

wget hhttps://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/Hack.zip -P ~/Downloads

wget https://github.com/ful1e5/Bibata_Cursor/releases/download/v1.1.2/Bibata-Modern.tar.gz -P ~/Downloads

git clone https://github.com/daniruiz/flat-remix-gtk.git ~/Downloads/Flat-Remix-Theme

git clone https://github.com/daniruiz/flat-remix.git ~/Downloads/Flat-Remix-Icons

mkdir -P .themes .icons .fonts

unzip ~/Downloads/Hack.zip -d ~/.fonts

tar -xvf ~/Downloads/Bibata-Modern.tar.gz -C ~/.icons

cp -r ~/Downloads/Flat-Remix-Theme/themes/Flat-Remix-* ~/.themes

cp -r ~/Downloads/Flat-Remix-Icons/Flat-Remix-* ~/.icons